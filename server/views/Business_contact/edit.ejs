<%- include ('../partials/header.ejs')%>
<%- include ('../partials/main_nav.ejs')%>

<!-- Edit page-->
<!-- Content  for the add page -->
<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%=title %></h1>
  
        <form class="form" method="post">
          <div class="from-group">
            <label for="nameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter your Name:"
              name="name"
              value="<%= Business_contact.name %>"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="emailTextField">Email</label>
            <input
              type="text"
              class="form-control"
              id="emailTextField"
              placeholder="Enter your Email:"
              name="email"
              value="<%= Business_contact.email %>"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="numberTextField">Contact Number</label>
            <input
              type="text"
              class="form-control"
              id="numberTextField"
              placeholder="Enter the contact number:"
              name="number"
              value="<%= Business_contact.number %>"
              required
            />
          </div>
          <br>
  
          <button class="login" type="submit">
            <i class="fa fa-check" aria-hidden="true"></i> Submit
          </button>
  
          <a href="/contact-list" class="cancle">
            <i class="fa fa-ban" aria-hidden="true"></i> Cancel
          </a>
  
          </div>
  
      
  
         
        </form>
      </div>
    </div>
  </div>

